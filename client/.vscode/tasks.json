{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Watch glsp-example/client packages",
      "type": "shell",
      "group": "build",
      "command": "yarn watch",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Open Workflow Standalone Example in Browser",
      "type": "shell",
      "group": "test",
      "command": "google-chrome workflow/workflow-standalone/app/diagram.html",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Workflow Theia Backend Example",
      "type": "shell",
      "group": "test",
      "command": "cd workflow/browser-app && yarn start:debug",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Build Workflow Example Server",
      "type": "shell",
      "group": "test",
      "command": "cd ../server && mvn clean install -Pfatjar",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    },
    {
      "label": "Start Workflow Example Server",
      "type": "shell",
      "group": "test",
      "command": "cd ../server && java -jar org.eclipse.glsp.example.workflow/target/org.eclipse.glsp.example.workflow-0.8.0-SNAPSHOT-glsp.jar --port=5007 --consoleLog=true --logLevel=debug",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
    {
      "label": "Start Workflow Example Server (Websocket)",
      "type": "shell",
      "group": "test",
      "command": "cd ../server && java -jar org.eclipse.glsp.example.workflow/target/org.eclipse.glsp.example.workflow-0.8.0-SNAPSHOT-glsp.jar --port=8081 --consoleLog=true --logLevel=debug --websocket",
      "presentation": {
        "reveal": "always",
        "panel": "new"
      },
      "problemMatcher": []
    }
  ]
}
