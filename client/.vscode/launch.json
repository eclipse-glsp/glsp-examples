{
  // Use IntelliSense to learn about possible Node.js debug attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Start Browser Backend",
      "program": "${workspaceRoot}/workflow/browser-app/src-gen/backend/main.js",
      "args": [
        "--loglevel=debug",
        "--port=3000",
        "--no-cluster",
        "--WORKFLOW_LSP=5007",
        "--WORKFLOW_NOTATION_LSP=5008",
        "--app-project-path=${workspaceRoot}/workflow/browser-app"
      ],
      "env": {
        "NODE_ENV": "development"
      },
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/node_modules/@theia/*/lib/**/*.js",
        "${workspaceRoot}/workflow/browser-app/lib/**/*.js",
        "${workspaceRoot}/workflow/browser-app/src-gen/**/*.js"
      ],
      "smartStep": true,
      "internalConsoleOptions": "openOnSessionStart",
      "outputCapture": "std"
    },
    {
      "name": "Launch Browser Frontend",
      "type": "chrome",
      "request": "launch",
      "url": "http://localhost:3000/",
      "sourceMaps": true,
      "webRoot": "${workspaceRoot}/workflow/browser-app"
    }
  ]
}
