{
  "name": "@eclipse-glsp-examples/workflow-theia",
  "private": "true",
  "version": "0.8.0",
  "keywords": [
    "theia-extension"
  ],
  "description": "Theia extension for the Workflow GLSP example",
  "license": "(EPL-2.0 OR GPL-2.0 WITH Classpath-exception-2.0)",
  "author": {
    "name": "Eclipse GLSP"
  },
  "homepage": "https://www.eclipse.org/glsp/",
  "repository": {
    "type": "git",
    "url": "https://github.com/eclipse-glsp/glsp-examples.git"
  },
  "bugs": "https://github.com/eclipse-glsp/glsp/issues",
  "contributors": [
    {
      "name": "Eclipse GLSP Project",
      "email": "glsp-dev@eclipse.org",
      "url": "https://projects.eclipse.org/projects/ecd.glsp"
    }
  ],
  "dependencies": {
    "@eclipse-glsp-examples/workflow-glsp": "0.8.0",
    "@eclipse-glsp/theia-integration": "0.8.0"
  },
  "devDependencies": {
    "rimraf": "^2.6.1",
    "typescript": "^3.9.2"
  },
  "files": [
    "lib",
    "src"
  ],
  "scripts": {
    "prepare": "yarn run clean && yarn run build",
    "clean": "rimraf lib",
    "build": "tsc && yarn run lint",
    "lint": "eslint -c ../.eslintrc.js --ext .ts,.tsx ./src",
    "copy:server": "cp ../../glsp-server/target/org.eclipse.glsp.example.workflow-0.8.0-glsp.jar server/org.eclipse.glsp.example.workflow-0.8.0-glsp.jar",
    "watch": "tsc -w"
  },
  "theiaExtensions": [
    {
      "frontend": "lib/browser/workflow-frontend-module",
      "backend": "lib/node/workflow-backend-module"
    }
  ]
