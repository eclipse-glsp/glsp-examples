{
  "private": true,
  "name": "minimal-browser-app",
  "version": "0.1.0",
  "dependencies": {
    "@theia/core": "1.4.0",
    "@theia/editor": "1.4.0",
    "@theia/filesystem": "1.4.0",
    "@theia/languages": "1.4.0",
    "@theia/markers": "1.4.0",
    "@theia/messages": "1.4.0",
    "@theia/monaco": "1.4.0",
    "@theia/navigator": "1.4.0",
    "@theia/preferences": "1.4.0",
    "@theia/process": "1.4.0",
    "@theia/terminal": "1.4.0",
    "@theia/workspace": "1.4.0",
    "@eclipse-glsp-examples/minimal-theia": "0.8.0"
  },
  "devDependencies": {
    "@theia/cli": "1.4.0"
  },
  "scripts": {
    "prepare": "yarn build",
    "build": "theia build --mode development",
    "start": "theia start --MINIMAL_GLSP=5013 --root-dir=../workspace",
    "start:external": "theia start --MINIMAL_GLSP=5013  --root-dir=../workspace  --DEBUG",
    "watch": "yarn build --mode development"
  },
  "theia": {
    "target": "browser"
  }
}
